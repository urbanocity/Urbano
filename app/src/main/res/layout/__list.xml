<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:clipToPadding="false"
    android:elevation="1dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Tone1"
        android:baselineAligned="false"
        android:clickable="true"
        android:clipToPadding="false"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="18dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="16dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:elevation="1dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="1dp"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:text="PG for 2 with Great Food"
                android:textColor="@color/Grey"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="2 MONTHS"
                android:textColor="@color/Tone7"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="4dp"
                android:text="Rs. 2500"
                android:textColor="@color/Orange"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Tone3"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Jalandhar"
            android:textColor="@color/Tone8"
            android:textSize="11dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Tone3"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Apartment/PG"
            android:textColor="@color/Tone8"
            android:textSize="11dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Tone3"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="31/03/2017"
            android:textColor="@color/Tone8"
            android:textSize="11dp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Tone5"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="bt_edit"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:text="EDIT"
            android:textColor="@color/Tone8"
            android:textSize="11dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bt_resell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Tone5"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="bt_resell"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:text="RESELL"
            android:textColor="@color/Tone8"
            android:textSize="11dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bt_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/Tone5"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="bt_delete"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:text="DELETE"
            android:textColor="@color/Tone8"
            android:textSize="11dp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_seperator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/Tone5"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>